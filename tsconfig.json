{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "target": "es2017",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}

